<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaBeta.Ao3Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="67.0" fitWidth="152.0" pickOnBounds="true" preserveRatio="true"><image><Image url="@jfxlogo.png" /></image></ImageView>
                <Label fx:id="timeLabel" text="Time"><font><Font name="System Bold" size="14.0" /></font></Label>

                <Label fx:id="tooltipLabel" style="-fx-text-fill: #999999; -fx-font-style: italic;">
                    <HBox.margin><Insets left="10.0" /></HBox.margin>
                </Label>

                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="modeSwitchButton" mnemonicParsing="false" onAction="#switchMode"  styleClass="clickable" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;"
                                onMouseEntered="#onModeSwitchEnter" onMouseExited="#onMouseExit">
                            <graphic><ImageView fx:id="modeImageView" fitHeight="53.0" fitWidth="137.0" pickOnBounds="true" preserveRatio="true"><image><Image url="@ofslm.png" /></image></ImageView></graphic>
                        </Button>

                        <ImageView fitHeight="53.0" fitWidth="137.0" onMouseClicked="#openSpotify" pickOnBounds="true" preserveRatio="true" styleClass="clickable-image" style="-fx-cursor: hand;"><image><Image url="@spot.png" /></image></ImageView>
                        <VBox />

                        <Button fx:id="myReviewsButton" onAction="#onMyReviewsClick" text="My Review Library" styleClass="button" HBox.hgrow="ALWAYS">
                            <graphic>
                                <FontIcon fx:id="myReviewsIcon" iconLiteral="fa-star" />
                            </graphic>
                        </Button>

                        <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettingsButtonClick" style="-fx-background-color: transparent; -fx-padding: 1; -fx-cursor: hand;"
                                onMouseEntered="#onSettingsEnter" onMouseExited="#onMouseExit">
                            <graphic><FontIcon fx:id="settingsIcon" iconLiteral="eli-cog" iconSize="24" /></graphic>
                        </Button>

                        <Button fx:id="themeButton" mnemonicParsing="false" onAction="#onThemeButtonClick" style="-fx-background-color: transparent; -fx-padding: 1; -fx-cursor: hand;"
                                onMouseEntered="#onThemeEnter" onMouseExited="#onMouseExit">
                            <graphic><FontIcon fx:id="themeIcon" iconLiteral="enty-adjust" iconSize="24" /></graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin><Insets bottom="10.0" /></BorderPane.margin>
        </HBox>
    </top>

    <left>
    </left>

    <center>
        <StackPane>
            <children>

                <BorderPane fx:id="onlineSearchPane">
                    <left>
                        <VBox fx:id="searchBox" prefWidth="250.0" spacing="15.0" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets right="10.0" />
                            </BorderPane.margin>
                            <Label prefHeight="39.0" prefWidth="199.0" text="Welcome Back,"><font><Font name="System Bold" size="25.0" /></font></Label>
                            <GridPane hgap="5.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="60.0" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                                <Label text="Any Field:" GridPane.rowIndex="0" />
                                <TextField fx:id="anyField" promptText="General search..." GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label text="Title:" GridPane.rowIndex="1" />
                                <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Author:" GridPane.rowIndex="2" />
                                <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label text="Tags:" GridPane.rowIndex="3" />
                                <TextField fx:id="tagsField" promptText="e.g., Fluff" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </GridPane>
                            <HBox spacing="10.0">
                                <Button fx:id="searchButton" maxWidth="1.7976931348623157E308" onAction="#onSearchButtonClick" text="Search" HBox.hgrow="ALWAYS" style="-fx-cursor: hand;" />
                                <Button fx:id="clearButton" maxWidth="1.7976931348623157E3" onAction="#onClearButtonClick" text="Clear" HBox.hgrow="ALWAYS" style="-fx-cursor: hand;" />
                            </HBox>
                        </VBox>
                    </left>

                    <center>
                        <StackPane VBox.vgrow="ALWAYS">
                            <children>
                                <ListView fx:id="resultsListView" />
                                <ProgressIndicator fx:id="loadingIndicator"/>
                            </children>
                        </StackPane>
                    </center>
                </BorderPane>

                <SplitPane fx:id="offlineSplitPane" visible="false" managed="false" dividerPositions="1.0">
                    <items>

                        <VBox fx:id="offlineLibraryPane" spacing="10" style="-fx-padding: 10;">

                            <HBox fx:id="libraryControlsBox" alignment="CENTER_LEFT" spacing="10.0">
                                <children>
                                    <Button fx:id="refreshLibraryButton" onAction="#onRefreshLibraryClick" style="-fx-background-color: transparent; -fx-padding: 1; -fx-cursor: hand;"
                                            onMouseEntered="#onRefreshEnter" onMouseExited="#onMouseExit">
                                        <graphic><ImageView fitHeight="53.0" fitWidth="137.0" pickOnBounds="true" preserveRatio="true"><image><Image url="@ref.png" /></image></ImageView></graphic>
                                    </Button>
                                    <Button fx:id="viewFolderButton" onAction="#onViewFolderClick" style="-fx-background-color: transparent; -fx-padding: 1; -fx-cursor: hand;"
                                            onMouseEntered="#onViewFolderEnter" onMouseExited="#onMouseExit">
                                        <graphic><ImageView fitHeight="53.0" fitWidth="137.0" pickOnBounds="true" preserveRatio="true"><image><Image url="@vf.png" /></image></ImageView></graphic>
                                    </Button>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="deleteStoryButton" onAction="#onDeleteStoryClick" style="-fx-background-color: transparent; -fx-padding: 1; -fx-cursor: hand;"
                                            onMouseEntered="#onDeleteStoryEnter" onMouseExited="#onMouseExit">
                                        <graphic><FontIcon fx:id="deleteIcon" iconLiteral="fa-trash" iconSize="22" /></graphic>
                                    </Button>
                                </children>
                                <VBox.margin>
                                    <Insets bottom="10.0" />
                                </VBox.margin>
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <children>
                                    <Label text="Downloaded Fanfiction" style="-fx-font-size: 22; -fx-font-weight: bold;" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="addFicButton" onAction="#handleAddFicClick" text="New folder" style="-fx-cursor: hand;" />
                                </children>
                            </HBox>

                            <ListView fx:id="unlistedListView" VBox.vgrow="ALWAYS" />

                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <children>
                                    <Label text="My Library" style="-fx-font-size: 22; -fx-font-weight: bold;" />
                                    <Region HBox.hgrow="ALWAYS" />
                                </children>
                            </HBox>

                            <TilePane fx:id="libraryTilePane" hgap="15" vgap="15" prefColumns="4" />

                        </VBox>

                        <VBox fx:id="createPane" alignment="TOP_LEFT" managed="false" prefWidth="350.0" spacing="15.0" style="-fx-padding: 10;" visible="false">
                            <children>
                                <Label text="Create Folder" style="-fx-font-size: 24; -fx-font-weight: bold;" />

                                <HBox spacing="10" alignment="TOP_LEFT">
                                    <children>
                                        <StackPane fx:id="folderImagePane" onMouseClicked="#handleSelectImageClick" prefHeight="150.0" prefWidth="150.0"
                                                   style="-fx-border-color: #AAAAAA; -fx-border-style: dashed; -fx-background-color: -fx-control-inner-background; -fx-cursor: hand;"
                                                   onMouseEntered="#onChangePhotoEnter" onMouseExited="#onMouseExit">
                                            <children>
                                                <FontIcon fx:id="folderImageIcon" iconLiteral="fa-plus" iconSize="60" styleClass="icon-placeholder" />
                                                <ImageView fx:id="folderImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" visible="false" />
                                            </children>
                                            <HBox.margin>
                                                <Insets top="10.0" />
                                            </HBox.margin>
                                        </StackPane>

                                        <VBox HBox.hgrow="ALWAYS">
                                            <children>
                                                <TextField fx:id="folderNameField" promptText="Folder Name">
                                                    <VBox.margin>
                                                        <Insets top="10.0" />
                                                    </VBox.margin>
                                                </TextField>
                                                <TextArea fx:id="folderDescriptionArea" promptText="Description for that special folder" prefHeight="100.0" wrapText="true" VBox.vgrow="ALWAYS" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <Label text="Add Stories" style="-fx-font-size: 16;" />
                                <VBox fx:id="addFicDropTarget" alignment="CENTER" style="-fx-border-color: #AAAAAA; -fx-border-style: dashed; -fx-background-color: #FAFAFA;" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Label text="Drag Fics Here from 'Unlisted'" />
                                        <ListView fx:id="newFolderFicsListView" prefHeight="1000" VBox.vgrow="ALWAYS" />
                                    </children>
                                </VBox>

                                <Button fx:id="createFolderButton" onAction="#handleCreateFolderClick" text="Create Folder" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-cursor: hand;" />
                            </children>
                        </VBox>
                    </items>
                </SplitPane>

                <TableView fx:id="libraryTableView" visible="false" managed="false">
                </TableView>
            </children>
        </StackPane>
    </center>

    <bottom>
    </bottom>
</BorderPane>