<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<VBox fx:id="root" spacing="5.0" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <HBox alignment="TOP_LEFT" spacing="10.0">
            <children>
                <GridPane fx:id="iconsGrid" hgap="2.0" vgap="2.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="20.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="20.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="20.0" valignment="CENTER" vgrow="NEVER" />
                        <RowConstraints minHeight="20.0" valignment="CENTER" vgrow="NEVER" />
                    </rowConstraints>
                    <children>
                        <ImageView fx:id="ratingIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ImageView fx:id="categoryIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <ImageView fx:id="warningIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <ImageView fx:id="completionIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>

                <VBox HBox.hgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <Label fx:id="titleLabel" style="-fx-font-size: 1.2em; -fx-font-weight: bold;" text="The Fanfiction Fanfiction" />
                        <Label text="by" />
                        <Label fx:id="authorLabel" style="-fx-text-fill: #0066cc; -fx-underline: true; -fx-cursor: hand;" text="Valeada" />
                    </HBox>
                    <Label fx:id="fandomLabel" style="-fx-font-size: 1.1em;" text="Supernatural" />
                </VBox>

                <Label fx:id="lastUpdatedLabel" text="01 May 2014" />
            </children>
        </HBox>

        <TextFlow fx:id="tagsTextFlow" style="-fx-padding: 5 0 0 0;" />

    </children>
</VBox>