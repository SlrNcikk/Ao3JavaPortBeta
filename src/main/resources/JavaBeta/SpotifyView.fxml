<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?> <?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaBeta.SpotifyController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20;">

    <Label text="🎵 Spotify Controller" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <Button fx:id="loginButton" text="Login to Spotify" onAction="#onLogin" />

    <Label fx:id="currentTrackLabel" text="Nothing playing..." style="-fx-font-size: 14;" />

    <Button fx:id="refreshButton" text="Refresh" onAction="#onRefresh" />

    <VBox fx:id="resultsBox" alignment="CENTER" spacing="5" style="-fx-padding: 10;">
        <ImageView fx:id="albumCover" fitHeight="150" fitWidth="150" preserveRatio="true" />
        <Label fx:id="songTitle" text="---" style="-fx-font-weight: bold; -fx-font-size: 16;" />
        <Label fx:id="artistName" text="---" style="-fx-font-size: 14;" />
    </VBox>
    <TextField fx:id="searchField" promptText="Search for a song..." />
    <Button fx:id="searchButton" text="Search" />
    <ListView fx:id="searchResultsList" prefHeight="150" />

    <HBox alignment="CENTER" spacing="10">
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="previousButton" text="⏮ Prev" onAction="#onPrevious" />
        <Button fx:id="playButton" text="▶ Play" onAction="#onPlay" />
        <Button fx:id="pauseButton" text="⏸ Pause" onAction="#onPause" />
        <Button fx:id="nextButton" text="⏭ Next" onAction="#onNext" />
    </HBox>

</VBox>