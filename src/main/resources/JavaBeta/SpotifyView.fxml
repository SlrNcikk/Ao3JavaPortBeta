<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootVBox" fx:controller="JavaBeta.SpotifyController"
            style="-fx-padding: 20;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 0 0 15 0;">
            <ToggleButton fx:id="themeToggleButton" onAction="#onToggleTheme" text="Dark Mode"/>

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="loginButton" text="Login to Spotify" onAction="#onLogin"/>
        </HBox>
    </top>

    <left>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 0 15 0 0;">
            <Label text="Spotify Controller" style="-fx-font-size: 18; -fx-font-weight: bold;" />
            <ImageView fx:id="albumCover" fitHeight="150" fitWidth="150" preserveRatio="true" />
            <Label fx:id="songTitle" text="Nothing playing..." style="-fx-font-size: 14;" />
            <Label fx:id="artistName" text="Artist" />

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="previousButton" text="⏮ Prev" onAction="#onPrevious" />
                <Button fx:id="playButton" text="▶ Play" onAction="#onPlay" />
                <Button fx:id="pauseButton" text="⏸ Pause" onAction="#onPause" />
                <Button fx:id="nextButton" text="⏭ Next" onAction="#onNext" />
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="15">
            <TextField fx:id="searchField" promptText="Search for a song..." maxWidth="Infinity"/>
            <Button fx:id="searchButton" text="Search" maxWidth="Infinity"/>

            <ListView fx:id="searchResultsList" prefHeight="150" maxWidth="Infinity" VBox.vgrow="ALWAYS" />

            <Button fx:id="refreshButton" text="Refresh" onAction="#onRefresh" maxWidth="Infinity"/>
        </VBox>
    </center>

</BorderPane>