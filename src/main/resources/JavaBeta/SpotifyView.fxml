<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="JavaBeta.SpotifyController"
            prefWidth="400" prefHeight="250">
    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="40">
        <Label fx:id="currentTrackLabel" text="Not Playing" style="-fx-font-size: 16px;" />
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="prevButton" text="⏮" onAction="#onPrevClicked" />
            <Button fx:id="playButton" text="▶️" onAction="#onPlayClicked" />
            <Button fx:id="pauseButton" text="⏸" onAction="#onPauseClicked" />
            <Button fx:id="nextButton" text="⏭" onAction="#onNextClicked" />
        </HBox>
    </VBox>
</AnchorPane>
