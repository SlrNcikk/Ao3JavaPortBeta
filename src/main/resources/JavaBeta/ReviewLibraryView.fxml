<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaBeta.ReviewLibraryController">
    <top>
        <VBox alignment="CENTER" spacing="5.0" style="-fx-padding: 10;">
            <children>
                <Label text="My Review Library" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label text="All the reviews you've written, in one place." />
            </children>
        </VBox>
    </top>
    <center>
        <ListView fx:id="reviewListView" />
    </center>
</BorderPane>